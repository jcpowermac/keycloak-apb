apiVersion: v1
kind: ImageStream
metadata:
  labels:
    app: {{ application_name }}
  name: {{ application_name }}
  namespace: {{ namespace }}
spec:
  lookupPolicy:
    local: false
  tags:
  - name: {{ keycloak_image_tag }}
    from:
      kind: DockerImage
      name: docker.io/jboss/keycloak-openshift:{{ keycloak_image_tag }}
